<div class="row">
    <div class="col-lg-5"></div>
    <div class="col-lg-2">
        <H1>Movies</H1>
    </div>
    <div class="col-lg-5"></div>
</div>
<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-4 leftColumn">
        <h2>Movies To Watch</h2>
        <ul>
            {{#each movies}}
            {{#unless watched}}
            {{> movies/movieElement watched=false}}
            {{/unless}}
            {{/each}}
        </ul>
    </div>
    <div class="col-md-4 rightColumn">
        <h2>Movies Watched</h2>
        <ul>
            {{#each movies}}
            {{#if watched}}
            {{> movies/movieElement watched=true}}
            {{/if}}
            {{/each}}
        </ul>
    </div>
    <div class="col-md-2"></div>
</div>
<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <h2>Add A Movie</h2>
        <form class="addMovie">
            <div class="input-group input-group-sm mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="inputGroup-sizing-sm">Movie Name</span>
                </div>
                <input type="text" class="form-control" id="name" aria-label="Sizing example input"
                    aria-describedby="inputGroup-sizing-sm">
            </div>
            <div class="input-group input-group-sm mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="inputGroup-sizing-sm">Rating</span>
                </div>
                <input type="text" class="form-control" id="rating" aria-label="Sizing example input"
                    aria-describedby="inputGroup-sizing-sm">
            </div>
            <button type="submit" class="btn btn-success">submit</button>
        </form>
    </div>
    <div class="col-md-4"></div>
</div>